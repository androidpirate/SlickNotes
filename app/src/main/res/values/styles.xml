<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.Default">
        <item name="noteListHeader">@style/NoteListHeader</item>
        <item name="noteTitle">@style/NoteTitle</item>
        <item name="noteDetails">@style/NoteDetails</item>
        <item name="editableNoteTitle">@style/EditNoteTitle</item>
        <item name="editableNoteDetails">@style/EditNoteDetails</item>
        <item name="emptyListMessage">@style/EmptyListMessage</item>
    </style>

    <style name="AppTheme.Large">
        <item name="noteListHeader">@style/NoteListHeaderLarge</item>
        <item name="noteTitle">@style/NoteTitleLarge</item>
        <item name="noteDetails">@style/NoteDetailsLarge</item>
        <item name="editableNoteTitle">@style/EditNoteTitleLarge</item>
        <item name="editableNoteDetails">@style/EditNoteDetailsLarge</item>
        <item name="emptyListMessage">@style/EmptyListMessageLarge</item>
    </style>

    <!-- NavigationView style -->
    <style name="NavView">
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Navigation title style -->
    <style name="NavHeaderTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorToolbarFont</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorToolbarFont</item>
    </style>

    <!-- Empty list message default style -->
    <style name="EmptyListMessage" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorEmptyListMessage</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Empty list message large style -->
    <style name="EmptyListMessageLarge" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorEmptyListMessage</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- NoteListHeader default style -->
    <style name="NoteListHeader" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- NoteListHeader large style -->
    <style name="NoteListHeaderLarge" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Note card border style -->
    <style name="NoteCardBorder">
        <item name="android:background">@drawable/card_border</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Note title default style -->
    <style name="NoteTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Note title large style -->
    <style name="NoteTitleLarge" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Note details default style -->
    <style name="NoteDetails" parent="TextAppearance.AppCompat.Body2">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Note details large style -->
    <style name="NoteDetailsLarge" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Note card checkbox style -->
    <style name="NoteCardCheckbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Editable note header text default style-->
    <style name="EditNoteTitle" parent="NoteTitle">
        <item name="android:hint">@string/titleHint</item>
        <item name="android:maxLines">10</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Editable note header text large style-->
    <style name="EditNoteTitleLarge" parent="NoteTitleLarge">
        <item name="android:hint">@string/titleHint</item>
        <item name="android:maxLines">10</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Editable note detail text default style -->
    <style name="EditNoteDetails" parent="NoteDetails">
        <item name="android:hint">@string/detailsHint</item>
        <item name="android:layout_height">@dimen/match_constraint_size</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:maxLines">15</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Editable note detail text large style -->
    <style name="EditNoteDetailsLarge" parent="NoteDetailsLarge">
        <item name="android:hint">@string/detailsHint</item>
        <item name="android:layout_height">@dimen/match_constraint_size</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:maxLines">15</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>