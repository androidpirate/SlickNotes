<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Content frame style -->
    <style name="ContentFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Inner content frame style -->
    <style name="InnerContentFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar">
        <item name="android:layout_width">@dimen/match_constraint_size</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/Toolbar</item>
        <item name="android:textColorSecondary">@color/colorToolbarFont</item>
    </style>

    <!-- NavigationView style -->
    <style name="NavView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Navigation header icon style -->
    <style name="NavHeaderIcon">
        <item name="android:layout_width">@dimen/nav_header_icon_width</item>
        <item name="android:layout_height">@dimen/nav_header_icon_height</item>
        <item name="android:src">@drawable/ic_slick_note</item>
    </style>

    <!-- Navigation title style -->
    <style name="NavHeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/nav_header_title_text</item>
        <item name="android:textSize">@dimen/nav_header_title</item>
        <item name="android:textColor">@color/colorToolbarFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
    </style>

    <!-- Fab style -->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_insert_note</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <!-- Note list style -->
    <style name="NoteList">
        <item name="android:layout_width">@dimen/match_constraint_size</item>
        <item name="android:layout_height">@dimen/match_constraint_size</item>
    </style>

    <!-- Empty list message style -->
    <style name="EmptyListMessage">
        <item name="android:layout_width">@dimen/match_constraint_size</item>
        <item name="android:layout_height">@dimen/match_constraint_size</item>
        <item name="android:text">@string/empty_list_message</item>
        <item name="android:textSize">@dimen/nav_header_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorEmptyListMessage</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Note card style -->
    <style name="NoteCard" parent="InnerContentFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:longClickable">true</item>
    </style>

    <!-- Note card border style -->
    <style name="NoteCardBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card_border</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Note header style -->
    <style name="NoteHeader">
        <item name="android:layout_width">@dimen/match_constraint_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/contentFontColor</item>
        <item name="android:textSize">@dimen/content_header</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Note details style -->
    <style name="NoteDetails">
        <item name="android:layout_width">@dimen/match_constraint_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/content_details</item>
        <item name="android:textColor">@color/contentFontColor</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Pin tag style -->
    <style name="PinTag" parent="NoteDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Note card checkbox style -->
    <style name="NoteCardCheckbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Editable Note Header Text -->
    <style name="EditNoteHeader" parent="NoteHeader">
        <item name="android:hint">@string/titleHint</item>
        <item name="android:maxLines">10</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Editable Note Detail Text -->
    <style name="EditNoteDetails" parent="NoteDetails">
        <item name="android:hint">@string/detailsHint</item>
        <item name="android:layout_height">@dimen/match_constraint_size</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:maxLines">15</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
