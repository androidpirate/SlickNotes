<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_white"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabWhite"
        app:fabSize="mini"
        app:layout_constraintEnd_toStartOf="@+id/fab_pink"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_pink"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabPink"
        app:fabSize="mini"
        app:layout_constraintEnd_toStartOf="@+id/fab_yellow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fab_white"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_yellow"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabYellow"
        app:fabSize="mini"
        app:layout_constraintEnd_toStartOf="@+id/fab_blue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fab_pink"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_blue"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabBlue"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fab_yellow"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_orange"
        style="@style/PickColorFabStyle"
        android:layout_marginTop="32dp"
        app:backgroundTint="@color/colorFabOrange"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_green"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fab_white"
        app:layout_constraintVertical_bias="0.958" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_green"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabGreen"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_purple"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fab_orange" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_purple"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabPurple"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_gray"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fab_green" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_gray"
        style="@style/PickColorFabStyle"
        app:backgroundTint="@color/colorFabGray"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fab_purple" />



</androidx.constraintlayout.widget.ConstraintLayout>